{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@demo/auth": ["libs/auth/src/index.ts"],
      "@demo/card": ["libs/card/src/index.ts"],
      "@demo/comics": ["libs/comics/src/index.ts"],
      "@demo/data-models": ["libs/data-models/src/index.ts"],
      "@demo/header": ["libs/header/src/index.ts"],
      "@demo/layout": ["libs/layout/src/index.ts"],
      "@demo/loading": ["libs/loading/src/index.ts"],
      "@demo/material": ["libs/material/src/index.ts"],
      "@demo/rtl": ["libs/rtl/src/index.ts"],
      "@demo/translate": ["libs/translate/src/index.ts"],
      "@demo/translate-demo": ["libs/translate-demo/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
